@model UpdateContactDto
@{
	ViewData["Title"] = "UpdateContact";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim Bilgileri İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<form method="post">

					<div class="card">
						<div class="card-header">
							<div class="card-title">İletişim Güncelleme</div>
						</div>
						<input type="hidden" asp-for="ContactID"/>
						<div class="card-body">
							<div class="form-group">
								<label for="location">Lokasyon</label>
								<input type="text" class="form-control" asp-for="Location" id="location">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="phone">Telefon</label>
								<input type="text" class="form-control" asp-for="Phone" id="phone">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="mail">Mail Adresi</label>
								<input type="email" class="form-control" asp-for="Mail" id="mail">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="title">Alt Başlık</label>
								<input type="text" class="form-control" asp-for="FooterTitle" id="title">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="opendays">Açık Günler</label>
								<input type="text" class="form-control" asp-for="OpenDays" id="opendays">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="opendescription">Açık Günler Açıklama</label>
								<input type="text" class="form-control" asp-for="OpenDaysDescription" id="opendescription">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="openhours">Açık Saatler</label>
								<input type="text" class="form-control" asp-for="OpenHours" id="openhours">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="footerDescription">Alt Açıklama Alanı</label>
								<textarea rows="5" class="form-control" asp-for="FooterDescription" id="footerDescription"></textarea>
							</div>
						</div>

						<div class="card-action">
							<button class="btn btn-success">İletişim Bilgi Yazısını Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>




