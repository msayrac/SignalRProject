@model CreateContactDto
@{
	ViewData["Title"] = "CreateContact";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<form method="post">

					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İletişim Yazı Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="location">Lokasyon Giriniz</label>
								<input type="text" class="form-control" asp-for="Location" id="location">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="phone">Telefon Numarası</label>
								<input type="text" class="form-control" asp-for="Phone" id="phone">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="mail">Mail Adresi</label>
								<input type="email" class="form-control" asp-for="Mail" id="mail">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="footerDescription">Açıklama</label>
								<textarea rows="5" class="form-control" asp-for="FooterDescription" id="footerDescription"></textarea>
							</div>
						</div>

						<div class="card-action">
							<button class="btn btn-primary">İletişim Bilgi Yazısını Oluştur</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>



