@model UpdateTestimonialDto

@{
	ViewData["Title"] = "UpdateTestimonial";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h1>Category Güncelleme Sayfası</h1>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Müsteri Yorum İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<form method="post">

					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Müsteri Yorum Girişi</div>
						</div>
						<input type="hidden" asp-for="TestimonialID" />
						<div class="card-body">
							<div class="form-group">
								<label for="Name" asp-for="Name">Müşteri Adını Giriniz</label>
								<input type="text" class="form-control" asp-for="Name" id="categoryname">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="Title" asp-for="Title">Müşteri Ünvanını Giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="categoryname">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="ImageUrl" asp-for="ImageUrl">Müşteri Resim Dosya Yolunu Giriniz</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="categoryname">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="Comment" asp-for="Comment">Müşteri Yorumunu Giriniz</label>
								<input type="text" class="form-control" asp-for="Comment" id="categoryname">
							</div>
						</div>




						<div class="card-action">
							<button class="btn btn-primary">Müşteri Yorumu Güncelle</button>
						</div>
					</div>

				</form>


			</div>
		</div>
	</div>
</div>




